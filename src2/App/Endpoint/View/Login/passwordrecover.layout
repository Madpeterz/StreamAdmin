<div class="card border border-success rounded">
  <div class="card-body">
    <h5 class="card-title">Oh snap you forgot your details</h5>
        <form action="[[url_base]]index.php/login/resetnow" method="post" class="ajax">
        <div class="row mt-4">
            <div class="col-8 offset-2"><input name="slusername" class="form-control" type="text" placeholder="SL username"></div>
        </div>
        <div class="row mt-4">
            <div class="col-8 offset-2"><input name="token" value="[[PAGE]]" class="form-control" type="text" placeholder="Reset token"></div>
        </div>
        <div class="row mt-4">
            <div class="col-8 offset-2"><input name="newpassword1" value="" class="form-control" type="password" placeholder="New password"></div>
        </div>
        <div class="row mt-4">
            <div class="col-8 offset-2"><input name="newpassword2" value="" class="form-control" type="password" placeholder="New password [repeated]"></div>
        </div>
        <div class="row mt-3">
            <div class="col-6"><a href="[[url_base]]"><button class="btn btn-dark btn-block" type="button">Wait NM</button></a></div>
            <div class="col-6"><button class="btn btn-success btn-block" type="submit">Update</button></div>
        </div>
        </form>
    </div>
</div>
