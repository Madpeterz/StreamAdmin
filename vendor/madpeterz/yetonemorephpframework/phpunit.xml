<phpunit
    bootstrap="./tests/bootstrap.php"
    convertWarningsToExceptions="true"
    convertNoticesToExceptions="true"
    convertErrorsToExceptions="true"
    backupStaticAttributes="false"
    processIsolation="false"
    stopOnFailure="false"
    backupGlobals="false"
    colors="true"
>
<testsuites>
    <testsuite name="core">
      <directory>tests/core</directory>
    </testsuite>
    <testsuite name="mysqli">
      <directory>tests/mysqli</directory>
    </testsuite>
    <testsuite name="db_objects">
      <directory>tests/db_objects</directory>
    </testsuite>
    <testsuite name="filter">
      <directory>tests/filter</directory>
    </testsuite>
    <testsuite name="gen">
      <directory>tests/gen</directory>
    </testsuite>
    <testsuite name="All">
      <directory>tests/core</directory>
      <directory>tests/mysqli</directory>
      <directory>tests/db_objects</directory>
      <directory>tests/filter</directory>
      <directory>tests/gen</directory>
    </testsuite>
</testsuites>
</phpunit>
