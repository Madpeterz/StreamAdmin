<html>
<head>
    <title>[[html_title]] - [[html_title_after]]</title>
    [[html_cs_top]]
    <meta content='maximum-scale=1.0, initial-scale=1.0, width=device-width' name='viewport'>
    <link rel="icon" type="image/png" href="[[url_base]]site/theme/streamadminr5/images/favicon-32x32.png">
    <link rel="stylesheet" type="text/css" href="[[url_base]]site/theme/shared/site.css">
</head>
<body>
    <div class="container-fluid">
        <div class="row mt-1 justify-content-between">
            <div class="col-1"><a href="[[url_base]]"><img class="logo" src="[[url_base]]site/theme/streamadminr5/images/logo.png" alt="logo"/></a></div>
        </div>
        <div class="row">
            <div class="col-2">
                <div class="row">
                    <div class="col-12">
                        <form action="[[url_base]]search" method="post"><input type="text" class="form-control" id="search" name="search" placeholder="Search for..."></form>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <ul class="nav nav-pills flex-column">
                            [[html_menu]]
                        </ul>
                    </div>
                </div>
                <div class="row align-items-end">
                    <div class="col-12">
                        <br/><br/>
                        <hr/>
                    </div>
                </div>
                <div class="row align-items-end">
                    <div class="col-5">
                        <a href="[[url_base]]login/logout"><button type="button" class="btn btn-block btn-secondary btn-sml">Logout</button></a>
                    </div>
                </div>
            </div>


            <div class="col-10">
                <div class="card">
                    <div class="card-header">
                        <div class="row mt-1 justify-content-between">
                            <div class="col-5">[[page_title]]</div>
                            <div class="col-1 justify-content-end">[[page_actions]]</div>
                        </div>
                    </div>
                    <div class="card-body">
                        [[page_content]]
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="NotecardModal" tabindex="-1" role="dialog" aria-labelledby="NotecardModal" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="ModalTitle"></h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
              <div class="form-group">
                <label for="message-text" class="col-form-label" id="ModalInfoLabel"></label>
                <textarea class="form-control" id="ModalText" rows="19"></textarea>
              </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>
    <div class="modal fade" id="AvatarPicker" tabindex="-1" role="dialog" aria-labelledby="AvatarPicker" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="AvatarPickerModalTitle">Avatar finder</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
              <div class="form-group">
                  <form id="finderform" method="post" action="[[url_base]]ajax.php/avatar/finder" class="form avatarfinderajax">
                      <div class="row">
                          <div class="col-sm-12 col-md-12 col-lg-12">
                              <label for="avatarfind" class="col-12 col-form-label">UUID or Part of username</label>
                              <div class="input-group">
                                  <input type="text" class="form-control" name="avatarfind" value="" placeholder="UUID or Part of username">
                              </div>
                          </div>
                      </div>
                      <div class="row mt-4">
                          <div class="col-12"><button type="submit" class="btn btn-primary">Find</button></div>
                    </div>
                  </form>
                  <hr/>
                  <div id="finder_results">
                        <div class="row">
                            <div id="finderscore" class="col-sm-4 col-md-4 col-lg-4">0%
                            </div>
                            <div id="finderuid" class="col-sm-4 col-md-4 col-lg-4">-
                            </div>
                            <div id="findername" class="col-sm-4 col-md-4 col-lg-4">-
                            </div>
                        </div>
                  <div>
              </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>
    [[html_js_bottom]]
    <script type="text/javascript" src="[[url_base]]site/theme/shared/site.js"></script>
    <script type="text/javascript">
        $( document ).ready(function() {
            [[html_js_onready]]
        });
    </script>
</body>
</html>
