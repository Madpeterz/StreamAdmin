{
    "name": "madpeterz/streamadmin",
    "description": "Audio stream control panel linked to secondlife",
    "type": "project",
    "autoload": {
        "psr-4": {
            "App\\": "src/App"
        }
    },
    "config": {
        "platform": {
            "php": "7.4"
        }
    },
    "require": {
        "php": ">=7.4",
        "guzzlehttp/guzzle": "^7.2",
        "madpeterz/yetonemorephpframework": "^1.0",
        "phpmailer/phpmailer": "^6.2"
    },
    "require-dev": {
        "slevomat/coding-standard": "^6.4",
        "phpunit/phpunit": "9",
        "squizlabs/php_codesniffer": "*"
    },
    "authors": [
        {
            "name": "Madpeter",
            "email": "madpeter@gmail.com"
        }
    ],
    "scripts": {
        "dev-test": [
            "phpunit --colors=always --configuration phpunit.xml --testdox --testsuite All "
        ],
        "dev-wip": [
            "phpunit --colors=always --configuration phpunit.xml --testdox --testsuite wip "
        ],
        "phpcs": "phpcs --parallel=4",
        "phpcbf": "phpcbf",
        "phpunit": "phpunit"
    }
}