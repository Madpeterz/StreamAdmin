<phpunit
    bootstrap="./tests/bootstrap.php"
    convertWarningsToExceptions="true"
    convertNoticesToExceptions="true"
    convertErrorsToExceptions="true"
    backupStaticAttributes="false"
    processIsolation="false"
    stopOnFailure="true"
    backupGlobals="false"
    colors="true"
>
  <testsuites>
        <testsuite name="All">
            <directory>tests/Install</directory>
            <directory>tests/Login</directory>
            <directory>tests/ForcedActions</directory>
            <directory>tests/WebUI</directory>
            <directory>tests/Etc</directory>
            <file>tests/SecondlifeAPI/Object_Test.php</file>
            <file>tests/SecondlifeAPI/Texturepack_Test.php</file>
            <file>tests/SecondlifeAPI/Buy_Test.php</file>
            <file>tests/SecondlifeAPI/Renew_Test.php</file>
            <file>tests/SecondlifeAPI/Proxyrenew_Test.php</file>
            <file>tests/SecondlifeAPI/Detailsserver_Test.php</file>
            <file>tests/SecondlifeAPI/Mailserver_Test.php</file>
            <file>tests/SecondlifeAPI/Noticeserver_Test.php</file>
            <file>tests/SecondlifeAPI/Details_Test.php</file>
            <file>tests/SecondlifeAPI/Bot_Test.php</file>
            <file>tests/SecondlifeAPI/Tree_Test.php</file>
            <file>tests/SystemApi/Notecard_Test.php</file>
            <file>tests/SecondlifeHud/Rentals_Test.php</file>
            <file>tests/Switchboards/Hud_Test.php</file>
            <file>tests/Switchboards/MainGrid_Test.php</file>
            <file>tests/Switchboards/Sys_Test.php</file>
            <file>tests/Switchboards/Website_Test.php</file>
        </testsuite>
  </testsuites>
  <filter>
      <whitelist>
          <directory>src</directory>
          <exclude>
              <directory>src/App/R4</directory>
              <directory>src/App/R7</directory>
              <directory>src/Gen</directory>
              <file>src/public_html/gen.php</file>
              <file>src/public_html/genr4.php</file>
          </exclude>
      </whitelist>
  </filter>
</phpunit>
