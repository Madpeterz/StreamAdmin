<phpunit
    bootstrap="./tests/bootstrap.php"
    convertWarningsToExceptions="true"
    convertNoticesToExceptions="true"
    convertErrorsToExceptions="true"
    backupStaticAttributes="false"
    processIsolation="false"
    stopOnFailure="true"
    backupGlobals="false"
    colors="true"
>
  <testsuites>
      <testsuite name="All">
        <directory>tests/R7/install</directory>
        <directory>tests/R7/login</directory>
        <directory>tests/R7/requiredactions</directory>
        <directory>tests/R7/batchable</directory>
      </testsuite>
  </testsuites>
  <filter>
      <whitelist>
          <directory>src</directory>
          <exclude>
              <directory>src/Junk</directory>
          </exclude>
      </whitelist>
  </filter>
</phpunit>
